// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  connectedAccounts ConnectedAccount[]
  aiChatSessions    AiChatSession[]
  aiProviderPrefs   AiProviderPreference?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Provider integrations
enum ProviderType {
  GMAIL
  OUTLOOK
  GDRIVE
  ONEDRIVE
  DISCORD
  WHATSAPP_BUSINESS
  SLACK
  TELEGRAM
  NOTION
}

model ConnectedAccount {
  id                String       @id @default(cuid())
  userId            String
  provider          ProviderType
  providerAccountId String
  accountLabel      String?
  accessToken       String?      @db.Text
  refreshToken      String?      @db.Text
  expiresAt         DateTime?
  scope             String?
  metadata          Json?
  isActive          Boolean      @default(true)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  syncScopes   SyncScope[]
  messageThreads MessageThread[]
  fileItems    FileItem[]
  notionResources NotionResource[]

  @@unique([userId, provider, providerAccountId])
  @@index([userId, provider])
}

enum SyncScopeType {
  DISCORD_SERVER
  DISCORD_CHANNEL
  GMAIL_LABEL
  OUTLOOK_FOLDER
  DRIVE_FOLDER
  ONEDRIVE_FOLDER
  NOTION_WORKSPACE
  NOTION_DATABASE
  NOTION_PAGE
  WHATSAPP_ACCOUNT
  SLACK_WORKSPACE
  SLACK_CHANNEL
  TELEGRAM_CHAT
}

model SyncScope {
  id                  String        @id @default(cuid())
  connectedAccountId  String
  scopeType           SyncScopeType
  scopeId             String
  scopeName           String
  config              Json?
  lastSyncedAt        DateTime?
  lastRemoteId        String?
  syncEnabled         Boolean       @default(true)
  historicalDays      Int           @default(90)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id], onDelete: Cascade)
  aiContextScopes  AiContextScope[]

  @@unique([connectedAccountId, scopeType, scopeId])
  @@index([connectedAccountId, syncEnabled])
}

// Messages
model MessageThread {
  id                  String   @id @default(cuid())
  connectedAccountId  String
  provider            ProviderType
  providerThreadId    String
  subject             String?
  participants        Json
  lastMessageAt       DateTime
  isUnread            Boolean  @default(false)
  metadata            Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id], onDelete: Cascade)
  messages         Message[]

  @@unique([connectedAccountId, providerThreadId])
  @@index([connectedAccountId, lastMessageAt])
  @@index([isUnread])
}

model Message {
  id                String        @id @default(cuid())
  threadId          String
  provider          ProviderType
  providerMessageId String
  sender            String
  content           String        @db.Text
  htmlContent       String?       @db.Text
  sentAt            DateTime
  isRead            Boolean       @default(false)
  metadata          Json?
  createdAt         DateTime      @default(now())

  thread MessageThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@unique([threadId, providerMessageId])
  @@index([threadId, sentAt])
  @@index([provider, sentAt])
}

// Storage
model FileItem {
  id                  String   @id @default(cuid())
  connectedAccountId  String
  provider            ProviderType
  providerFileId      String
  name                String
  mimeType            String?
  size                BigInt?
  webViewLink         String?
  iconLink            String?
  modifiedTime        DateTime
  path                String?
  metadata            Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id], onDelete: Cascade)

  @@unique([connectedAccountId, providerFileId])
  @@index([connectedAccountId, modifiedTime])
  @@index([name])
}

// Notion
enum NotionResourceType {
  PAGE
  DATABASE
}

model NotionResource {
  id                  String             @id @default(cuid())
  connectedAccountId  String
  providerResourceId  String
  resourceType        NotionResourceType
  title               String
  url                 String?
  lastEditedTime      DateTime
  metadata            Json?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id], onDelete: Cascade)

  @@unique([connectedAccountId, providerResourceId])
  @@index([connectedAccountId, lastEditedTime])
  @@index([title])
}

// AI Chat
enum AiProvider {
  OPENAI
  GEMINI
  CLAUDE
}

model AiChatSession {
  id                        String     @id @default(cuid())
  userId                    String
  provider                  AiProvider
  model                     String?
  title                     String?
  askBeforeSearchingContext Boolean    @default(true)
  contextDomains            Json?
  createdAt                 DateTime   @default(now())
  updatedAt                 DateTime   @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages        AiMessage[]
  contextScopes   AiContextScope[]

  @@index([userId, createdAt])
}

model AiMessage {
  id        String   @id @default(cuid())
  sessionId String
  role      String
  content   String   @db.Text
  sources   Json?
  metadata  Json?
  createdAt DateTime @default(now())

  session AiChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
}

model AiContextScope {
  id                 String  @id @default(cuid())
  sessionId          String
  connectedAccountId String?
  syncScopeId        String?
  enabled            Boolean @default(true)

  session   AiChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  syncScope SyncScope?    @relation(fields: [syncScopeId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model AiProviderPreference {
  id              String     @id @default(cuid())
  userId          String     @unique
  defaultProvider AiProvider @default(OPENAI)
  defaultModel    String?
  config          Json?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Observability
enum ProviderLogLevel {
  INFO
  WARN
  ERROR
}

model ProviderLog {
  id               String           @id @default(cuid())
  provider         ProviderType
  operation        String
  level            ProviderLogLevel @default(INFO)
  message          String           @db.Text
  errorDetails     String?          @db.Text
  metadata         Json?
  timestamp        DateTime         @default(now())

  @@index([provider, timestamp])
  @@index([level, timestamp])
}
